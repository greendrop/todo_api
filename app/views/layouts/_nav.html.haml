%nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{type: "button", "data-toggle" => "collapse", "data-target" => "#main-navbar-collapse"}
        %span.sr-only
          Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'TodoApi', root_url, class: 'navbar-brand'

    .collapse.navbar-collapse{id: "main-navbar-collapse"}
      %ul.nav.navbar-nav
        %li
          = link_to Todo.model_name.human, todos_url

      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.dropdown
            = link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"}, role: "button", "aria-expanded" => "false" do
              = t('label.account')
              %span.caret
            %ul.dropdown-menu{role: "menu"}
              %li
                = link_to t('.user.edit'), edit_user_registration_url
              %li.divider
              %li
                = link_to t('label.sign_out'), destroy_user_session_url, method: :delete
        - else
          %li
            = link_to t('label.sign_in'), new_user_session_path

