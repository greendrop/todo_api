.page-header
  %h1
    Resend confirmation instructions

.row
  .col-sm-9
    .container-fluid
      .row
        = form_for resource, as: resource_name, url: confirmation_path(resource_name), html: {method: :post, class: 'form-horizontal'} do |f|
          = render '/shared/form_errors_base', resource: f.object

          = f.bootstrap_form_group :email do
            = f.bootstrap_control_label :email, class: "col-sm-3"
            .col-sm-9
              = f.email_field :email, class: 'form-control'
              = f.bootstrap_error_message_on :email

          .form-group
            .col-sm-offset-3.col-sm-9
              = f.submit "Resend confirmation instructions", class: 'btn btn-primary'

  .col-sm-3
    = render "users/shared/links"
