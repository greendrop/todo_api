.page-header
  %h1
    = t '.title'

.row
  .col-sm-9
    .container-fluid
      .row
        = form_for resource, as: resource_name, url: password_path(resource_name), html: {method: :put, class: 'form-horizontal'} do |f|
          = render '/shared/form_errors_base', resource: f.object

          = f.hidden_field :reset_password_token

          = f.bootstrap_form_group :password do
            = f.bootstrap_control_label :password, t('.new_password'), class: "col-sm-3"
            .col-sm-9
              = f.password_field :password, class: 'form-control'
              = f.bootstrap_error_message_on :password

          = f.bootstrap_form_group :password_confirmation do
            = f.bootstrap_control_label :password_confirmation, t('.new_password_confirmation'), class: "col-sm-3"
            .col-sm-9
              = f.password_field :password_confirmation, class: 'form-control'
              = f.bootstrap_error_message_on :password_confirmation

          .form-group
            .col-sm-offset-3.col-sm-9
              = f.submit t('.submit'), class: 'btn btn-primary'

  .col-sm-3
    = render "users/shared/links"
